<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/inputNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/inputFName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/inputLName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/inputDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="date of birth"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/inputJoinDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Joining Date"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/inputAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/inputAdhar"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:background="#A1B1C3"
        android:layout_height="wrap_content"
        android:text="Select Aadhar card"
        android:textSize="25sp"/>

    <Button
        android:id="@+id/addCustomer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Customer"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        />

</LinearLayout>